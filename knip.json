{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    ".": {
      "entry": ["turbo.json"]
    },
    "apps/api": {
      "entry": ["src/main.ts"],
      "project": ["src/**/*.ts"]
    },
    "apps/web": {
      "entry": ["src/main.ts", "vite.config.ts", "e2e/**/*.ts"],
      "project": ["src/**/*.{ts,vue}"]
    },
    "packages/*": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts"]
    },
    "tools/*": {
      "entry": ["src/cli.ts"],
      "project": ["src/**/*.ts"]
    }
  },
  "ignoreDependencies": [
    "@types/*",
    "turbo",
    "lefthook",
    "ioredis",
    "@vueuse/core",
    "radix-vue",
    "drizzle-orm",
    "zod",
    "@blankcode/shared",
    "autoprefixer",
    "tailwindcss",
    "msw",
    "@vitest/coverage-v8"
  ],
  "ignoreWorkspaces": ["content"],
  "ignore": [
    "apps/api/src/common/guards/**",
    "apps/web/src/components/editor/blank-region.vue",
    "apps/web/src/components/layout/app-sidebar.vue",
    "apps/web/src/components/ui/modal.vue"
  ],
  "ignoreExportsUsedInFile": true
}
