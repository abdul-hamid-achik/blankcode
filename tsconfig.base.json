{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2024",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2024"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "exactOptionalPropertyTypes": true,
    "noFallthroughCasesInSwitch": true,
    "useDefineForClassFields": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@blankcode/shared": ["packages/shared/src/index.ts"],
      "@blankcode/shared/*": ["packages/shared/src/*"],
      "@blankcode/db": ["packages/db/src/index.ts"],
      "@blankcode/db/*": ["packages/db/src/*"],
      "@blankcode/exercise-parser": ["packages/exercise-parser/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "dist", "coverage"]
}
