{
  "name": "blankcode",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*",
    "tools/*"
  ],
  "scripts": {
    "dev": "bunx turbo dev",
    "build": "bunx turbo build",
    "test": "bunx turbo test",
    "test:e2e": "bunx turbo test:e2e",
    "lint": "bunx biome check .",
    "lint:fix": "bunx biome check --write .",
    "format": "bunx biome format --write .",
    "typecheck": "bunx turbo typecheck",
    "clean": "bunx turbo clean && rm -rf node_modules",
    "db:generate": "bun run --filter @blankcode/db db:generate",
    "db:migrate": "bun run --filter @blankcode/db db:migrate",
    "db:push": "bun run --filter @blankcode/db db:push",
    "db:studio": "bun run --filter @blankcode/db db:studio",
    "prepare": "lefthook install || true",
    "knip": "bunx knip"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.0",
    "knip": "^5.0.0",
    "lefthook": "^1.10.0",
    "turbo": "^2.0.0",
    "typescript": "5.9.3"
  },
  "dependencies": {
    "drizzle-orm": "^0.40.0",
    "zod": "^4.0.0"
  },
  "packageManager": "bun@1.3.7",
  "engines": {
    "node": ">=22.0.0"
  }
}
